#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  a
    font-size 1.2em
    color #999
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 3.2em
    line-height 1

  h2
    font-weight normal
    font-size 1.6em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    ul
      list-style none
      li
        float left
        margin-left 30px